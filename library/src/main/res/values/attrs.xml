<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MagicProgressCircle">
        <attr name="mpc_percent" format="float" />
        <attr name="mpc_stroke_width" format="dimension" />
        <attr name="mpc_start_color" format="color" />
        <attr name="mpc_end_color" format="color" />
        <!-- 背景环的颜色 -->
        <attr name="mpc_default_color" format="color" />
        <!-- 圆弧: 结尾是否覆盖开始 -->
        <attr name="mpc_foot_over_head" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MagicProgressBar">
        <attr name="mpb_percent" format="float" />
        <attr name="mpb_fill_color" format="color" />
        <attr name="mpb_background_color" format="color" />
        <attr name="mpb_flat" format="boolean" />
        <attr name="mpb_show_text"  format="boolean"/>
        <attr name="mpb_text_color" format="color" />
        <attr name="mpb_text_size" format="dimension" />
        <attr name="mpb_bar_width" format="dimension" />
        <attr name="mbp_bar_text_space" format="dimension" />
    </declare-styleable>

</resources>